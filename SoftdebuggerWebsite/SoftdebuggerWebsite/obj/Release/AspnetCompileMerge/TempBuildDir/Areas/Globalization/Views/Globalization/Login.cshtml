
<link href="~/Areas/Globalization/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Areas/Globalization/css/main.css" rel="stylesheet" />
<script src="~/Areas/Globalization/js/jquery-3.2.1.js"></script>
<script src="~/Areas/Globalization/js/main.js"></script>

<div class="container" style="background-image:url(~/Areas/Globalization/images/banner_bg.jpg)">
    <div class="row">
        <div class="col-md-4 col-sm-12 col-xs-12 col-md-offset-4">
            <div class="brand-logo_col">

                <img src="~/images/logo.JPG"  class="img-responsive"/>
            </div>
            <div class="login-model_col">
                <div class="login-model_head">
                    <h1>Login Your Account</h1>
                </div>
                <div class="login-model_fieldset">
                    <div class="col-sm-12">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Your e-mail</label>
                            <input class="form-control" data-val="true" data-val-required="The UserEmail field is required." id="UserEmail" name="UserEmail" type="text" value="">

                            <span class="material-input"></span>
                        </div>
                    </div>
                    <div class="col-sm-12" id="passworddiv">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Password</label>

                            <input class="form-control" data-val="true" data-val-required="The UserPassword field is required." id="UserPassword" name="UserPassword" type="password">

                            <span class="material-input"></span>
                        </div>
                    </div>
                    <div class="col-md-8 col-md-offset-2"><input type="submit" id="validateuseremail" class="btn btn-primary btn-round" value="Login"></div>
                </div>
                <div style="text-align: center;"><span style="color:red" id="usermessage"></span></div>
            </div>

        </div>
    </div>
</div>