<title>Create New Package</title>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <h1>
            Create New Package
            <small>Add Basic Package Details</small>
        </h1>
    </div>
   

    <!-- Main content -->
    <div class="content body" ng-app="CreateNewPackageapp">
        <form name="exampleForm" class="elegant-aero">
            <div class="container" ng-controller="CreateNewPackagecontroller">
                <fieldset id="basicuserdetail">
                    <legend>
                        Basic Package Details
                    </legend>
                    <section>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Code</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" readonly="readonly" class="form-control" required autocomplete="off" ng-model="BasicPackageDetails.PackageCode" /></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Name</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input type="text" class="form-control" required autocomplete="off" name="PackageName" ng-model="BasicPackageDetails.PackageName" />
                             
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Language</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input type="text" id="autocomplete" ej-autocomplete e-width="100%" e-fields-key="languageCode" e-fields-text="languageName" e-datasource="dataList" />

                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Title</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" class="form-control" required autocomplete="off" ng-model="BasicPackageDetails.PackageTitle" /><!--Column right--></div>
                        </div>
                        <div class="row" style="margin-top:10px;display:none">
                            <div class="col-sm-3 col-md-3 col-lg-3"></div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <button type="button" class="btn btn-primary btn-lg btn-block">Next Step</button>                               
                            </div>
                        </div>
                    </section>
                </fieldset>

                <fieldset id="basicpackagecriteriadetails" style="display:block;">
                    <legend>
                        Basic Package Criteria
                    </legend>
                    <section>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Market</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                            <select class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.PackageMarket" >
                                <option value="">Select</option>
                                <option value="DOM">Domestic</option>
                                <option value="INT">International</option>
                            </select>
                            
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Sale Market</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                
                                <select class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.PackageSaleMarket">
                                    <option value="">Select</option>
                                    <option value="DOM">Domestic</option>
                                    <option value="INT">International</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Validity Start Date</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                
                                @*<md-datepicker ng-model="BasicPackageCreteria.PackageValidityStartDate" md-placeholder="Enter date"></md-datepicker>*@

                                <input type="date" ng-model="BasicPackageCreteria.PackageValidityStartDate" class="form-control" />

                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Validity End Date</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input type="date" ng-model="BasicPackageCreteria.PackageValidityEndDate" class="form-control" />
                        </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Booking Start Date</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input type="date" ng-model="BasicPackageCreteria.PackageBookingStartDate" class="form-control" />
                            <!--Column right--></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Booking End Date</div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input type="date" ng-model="BasicPackageCreteria.PackageBookingEndDate" class="form-control" />
                            
                            
                            <!--Column right--></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Duration(*In Days)</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.PackageDuration" /><!--Column right--></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Child Min Age</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.ChildMinAge" /><!--Column right--></div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Child Max Age</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.ChildMaxAge" /><!--Column right--></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Last Payment Due</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.PackageLastPaymentDue" /><!--Column right--></div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Package Payment CutOff Date</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.PackagePaymentCutOffDate" /><!--Column right--></div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">Discount on Full Payment(% in case of percentage)</div>
                            <div class="col-sm-8 col-md-8 col-lg-8"><input type="text" class="form-control" required autocomplete="off" ng-model="BasicPackageCreteria.DiscountonFullPayment" /><!--Column right--></div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-sm-3 col-md-3 col-lg-3"></div>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <button type="button" class="btn btn-primary btn-lg btn-block">Next Step</button>
                            </div>
                        </div>
                    </section>
                </fieldset>
            </div>
        </form>
</div>

</div>

