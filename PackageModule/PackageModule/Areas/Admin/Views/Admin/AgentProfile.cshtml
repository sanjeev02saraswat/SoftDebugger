@{ string Resources = Convert.ToString(ViewBag.AddLocalizationLangFile);}


<div class="content-wrapper"  ng-app="UpdateAgentApp" ng-controller="UpdateAgentProfilecontroller" ng-init="GetAgentProfile()">
    <title>{{Localization.UpdateAgentProfileKey}}</title>
    <div class="content-header">
        <h1>
            Agent Profile
            <small>Update Agent Profile</small>
        </h1>
    </div>
    <!-- Main content -->
    <div class="content body">
        <div class="container">
            <input type="hidden" id="hdnResources" value="@Resources" />
            <section id="basicuserdetail">
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">Agent Id<!--Column left--></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                    <input type="text" readonly="readonly" class="form-control" required autocomplete="off" ng-model="AgentDetails.AgentID" id="AgentID"/><!--Column right--></div>
                </div>
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">First Name</div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                    <input type="text"  class="form-control"  autocomplete="off" ng-model="AgentDetails.FirstName" id="FirstName" required />
                        @*<div class="error-container"
                             ng-show="AgentDetails.FirstName.$dirty && AgentDetails.FirstName.$invalid">
                            <small class="text-danger"
                                   ng-show="AgentDetails.FirstName.$error.required">
                                Your name is required.
                            </small>
                            <small class="text-danger"
                                   ng-show="AgentDetails.FirstName.$error.minlength">
                                Your name is required to be at least 3 characters
                            </small>
                            <small class="text-danger"
                                   ng-show="AgentDetails.FirstName.$error.maxlength">
                                Your name cannot be longer than 20 characters
                            </small>
                        </div>*@

                        <div ng-messages="AgentDetails.FirstName.$error" role="alert">
                            <div ng-message="required">Please enter a value for this field.</div>
                            @*<div ng-message="email">This field must be a valid email address.</div>
                            <div ng-message="maxlength">This field can be at most 15 characters long.</div>*@
                        </div>
                        <span class="modelerror" ng-show="AgentDetails.FirstName==''">{{Localization.errorSelectApplication}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">Last Name<!--Column left--></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                    <input type="text"  class="form-control" required autocomplete="off" ng-model="AgentDetails.LastName" id="LastName" />
                    
                        <span class="modelerror" ng-show="AgentDetails.LastName==''">{{Localization.errorSelectApplication}}</span>
                        <span style="color:red" ng-show="AgentDetails.LastName.$dirty && AgentDetails.LastName.$invalid">
                            <span ng-show="AgentDetails.LastName.$error.required">Username is required.</span>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">Email<!--Column left--></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                    <input type="text" class="form-control" required autocomplete="off" ng-model="AgentDetails.Email" id="Email" />
                        <span class="modelerror" ng-show="AgentDetails.Email==''">{{Localization.errorSelectApplication}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">Phone<!--Column left--></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                    <input type="text" class="form-control" required autocomplete="off" ng-model="AgentDetails.Phone" id="Phone" />
                        <span class="modelerror hiddenmessages">{{Localization.errorSelectApplication}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">DashBoard Language<!--Column left--></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                        <input type="text" id="Language" ej-autocomplete e-width="100%"  e-fields-key="languageCode" e-fields-text="languageName" e-datasource="dataList" />
                        <input type="hidden" id="hdnPackageLanguage" ng-model="AgentDetails.Language" />
                        <span class="modelerror hiddenmessages">{{Localization.errorSelectApplication}}</span>
                </div>
                    </div>
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">Default Page<!--Column left--></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                    <input type="text" class="form-control" required autocomplete="off" ng-model="AgentDetails.DefaultPage" id="DefaultPage"/>
                        <span class="modelerror hiddenmessages">{{Localization.errorSelectApplication}}</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">Address<!--Column left--></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                    <input type="text" class="form-control" required autocomplete="off" ng-model="AgentDetails.Address" id="Address" />
                        <span class="modelerror hiddenmessages">{{Localization.errorSelectApplication}}</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">Country</div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                        <input type="text" id="Country" ej-autocomplete e-width="100%" e-fields-key="countryCode" e-fields-text="countryName" e-datasource="countryList" />
                        <input type="hidden" id="hdnAgentCountry" ng-model="AgentDetails.Country" />
                        <span class="modelerror hiddenmessages">{{Localization.errorSelectApplication}}</span>
                    
                    </div>
                </div>

               
                <div class="row" style="margin-top:10px;">
                    <div class="col-sm-3 col-md-3 col-lg-3"></div>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                        <button ng-click="AddLanguageCode();AddCountryCode();UpdateAgentProfile(AgentDetails);" type="button" class="btn btn-primary btn-lg btn-block">Update</button>
                        <span class="modelSuccess hiddenmessages">{{Localization.errorSelectApplication}}</span>
                    </div>
                </div>
            </section>
        </div>

    </div>

</div>
<script src="~/Areas/Admin/Assets/script/Admin/AgentProfile.js"></script>